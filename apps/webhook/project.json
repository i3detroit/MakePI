{
  "root": "apps/webhook",
  "sourceRoot": "apps/webhook/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/node:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/webhook",
        "main": "apps/webhook/src/main.ts",
        "tsConfig": "apps/webhook/tsconfig.app.json",
        "assets": ["apps/webhook/src/assets"]
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "fileReplacements": [
            {
              "replace": "apps/webhook/src/environments/environment.ts",
              "with": "apps/webhook/src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "build-container": {
      "executor": "@nrwl/node:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/webhook-lambda",
        "main": "apps/webhook/src/lambda.ts",
        "tsConfig": "apps/webhook/tsconfig.app.json",
        "assets": ["apps/webhook/src/assets"]
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "fileReplacements": [
            {
              "replace": "apps/webhook/src/environments/environment.ts",
              "with": "apps/webhook/src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "prepare-docker": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          {
            "command": "nx build-container webhook"
          },
          {
            "command": "cp -fv package.json package-lock.json apps/webhook/Dockerfile dist/apps/webhook-lambda/"
          }
        ],
        "parallel": false
      },
      "outputs": ["dist/apps/global-infrastructure"]
    },
    "build-docker": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          {
            "command": "nx prepare-docker webhook"
          },
          {
            "command": "docker build -t makepi-webhook:$SOURCE_ACTION_COMMIT_ID ./dist/apps/webhook-lambda"
          }
        ],
        "parallel": false
      }
    },
    "serve": {
      "executor": "@nrwl/node:execute",
      "options": {
        "buildTarget": "webhook:build"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/webhook/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/webhook"],
      "options": {
        "jestConfig": "apps/webhook/jest.config.js",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
